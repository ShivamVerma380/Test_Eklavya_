<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        tools:text = "Name:Shivam Verma"
        android:padding="5dp"
        android:background="@drawable/edit_text_background"
        />
    <TextView
        android:id="@+id/tvCompany"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:text="Company:Amazon"
        android:padding="5dp"
        android:background="@drawable/edit_text_background"
        />
    <TextView
        android:id="@+id/tvDesignation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvCompany"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:text="Designation:SDE-2"
        android:padding="5dp"
        android:background="@drawable/edit_text_background"
        />
    <TextView
        android:id="@+id/tvField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDesignation"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        tools:text="Field:Web Developer"
        android:padding="5dp"
        android:background="@drawable/edit_text_background"
        />
    <TextView
        android:id="@+id/tvtext"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="View full profile:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvField"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:textSize="20sp"
        android:textColor="#abcdef"
        />
    <ImageView
        android:id="@+id/imgProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_forward_24"
        app:layout_constraintLeft_toRightOf="@+id/tvtext"
        app:layout_constraintTop_toBottomOf="@id/tvField"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        />
    <ImageView
        android:id="@+id/imgchat"
        android:src="@drawable/ic_round_chat_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvField"
        />
</androidx.constraintlayout.widget.ConstraintLayout>